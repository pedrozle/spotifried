@model UserModel

<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Spotifried</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Music" asp-action="Index">Musicas</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Usuários</a>
        </li>
        <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                aria-expanded="false">
                Olá, @Model.Name
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Logout">Sair</a></li>
            </ul>
        </div>
    </ul>
</div>