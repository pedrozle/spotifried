@{
    ViewData["Title"] = "Início";
}

<section class="bg-muted py-12 sm:py-16 md:py-20">
    <div class="container mx-auto px-4 sm:px-6 md:px-8">
        <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
            <div class="col-span-1 md:col-span-2 lg:col-span-1">
                <img src="https://imusic.b-cdn.net/images/item/original/447/0602435357447.jpg?selena-gomez-revival-5-tracks-cd&class=scaled&v=1697033381" width="400" height="400" alt="Album Cover"
                    class="aspect-square w-full rounded-lg object-cover shadow-lg" />
            </div>
            <div class="col-span-1 md:col-span-2 lg:col-span-2 flex flex-col justify-center">
                <div class="space-y-2">
                    <div class="text-sm font-medium text-primary">Álbum</div>
                    
                    <a class="font-bold text-2xl block" asp-controller="Album" asp-action="Index" asp-route-itemid="">Revival</a>
                    <a class="text-muted-foreground" asp-controller="Artist" asp-action="Index" asp-route-itemid="">Selena Gomez</a>
                </div>
            </div>
        </div>
    </div>
</section>
