@model UserLoginModel
@{
    Layout = "_LayoutNotLogged";
    ViewData["Title"] = "Login";
    var alert = TempData["Alert"] as Dictionary<string, string>;

}

@if (alert != null)
{
    var title = alert.ContainsKey("Title") ?  alert["Title"] : "Atenção";
    var content = alert.ContainsKey("Content")? alert["Content"] : "Mensagem";
    var type = alert.ContainsKey("Type")? alert["Type"] : "primary";
    var icon = alert.ContainsKey("Icon")? alert["Icon"] : "fa-exclamation";

    @await Component.InvokeAsync("NotificationPopUp", new NotificationModel {Title = title,  Content = content, Type = type, Icon = icon})
}

