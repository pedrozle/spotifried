@model UserModel
@{
    ViewData["Title"] = "Cadastro";
    var alert = TempData["Alert"] as Dictionary<string, string>;
}

@if (alert != null)
{
    var title = alert.ContainsKey("Title") ? alert["Title"] : "Atenção";
    var content = alert.ContainsKey("Content") ? alert["Content"] : "Mensagem";
    var type = alert.ContainsKey("Type") ? alert["Type"] : "primary";
    var icon = alert.ContainsKey("Icon") ? alert["Icon"] : "fa-exclamation";

    @await Component.InvokeAsync("NotificationPopUp", new NotificationModel
{
    Title = title,
    Content = content,
    Type = type,
    Icon = icon
})
}

<div class="flex flex-col items-center justify-center h-screen bg-[#121212] text-white">
    <div class="mb-8">
        <img src="https://placeholder.com/150" alt="Spotify Logo" width="150" height="150"
            style="aspect-ratio: 150 / 150; object-fit: cover;" />
    </div>
    <div class="w-full max-w-md p-6 bg-[#282828] rounded-lg shadow-lg">
        <h2 class="text-2xl text-center font-bold mb-6">Cadastre-se no Spotifried</h2>
        <form class="space-y-4 mb-4" asp-controller="Login" asp-action="Register" method="post">
            <div>
                <label
                    class="peer-disabled:cursor-not-allowed peer-disabled:opacity-70 block mb-1 text-sm font-medium text-[#b3b3b3]"
                    for="Name">
                    Nome
                </label>
                <input
                    class="flex h-10 border border-input text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 w-full px-2 py-2 bg-[#3e3e3e] border-none rounded-md focus:outline-none focus:ring-2 focus:ring-[#1DB954]"
                    asp-for="Name" id="Name" type="text" placeholder="ex: João da Silva" />
                @Html.ValidationMessageFor(u => u.Name)
            </div>
            <div>
                <label
                    class="peer-disabled:cursor-not-allowed peer-disabled:opacity-70 block mb-1 text-sm font-medium text-[#b3b3b3]"
                    for="Username">
                    Usuário
                </label>
                <input
                    class="flex h-10 border border-input text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 w-full px-2 py-2 bg-[#3e3e3e] border-none rounded-md focus:outline-none focus:ring-2 focus:ring-[#1DB954]"
                    asp-for="Username" id="Username" type="text" placeholder="ex: joaouser" />
                @Html.ValidationMessageFor(u => u.Username)
            </div>
            <div>
                <label
                    class="peer-disabled:cursor-not-allowed peer-disabled:opacity-70 block mb-1 text-sm font-medium text-[#b3b3b3]"
                    for="Email">
                    Email
                </label>
                <input
                    class="flex h-10 border border-input text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 w-full px-2 py-2 bg-[#3e3e3e] border-none rounded-md focus:outline-none focus:ring-2 focus:ring-[#1DB954]"
                    asp-for="Email" id="Email" type="email" placeholder="ex: joao@email.com" />
                @Html.ValidationMessageFor(u => u.Email)
            </div>
            <div>
                <label
                    class="peer-disabled:cursor-not-allowed peer-disabled:opacity-70 block mb-1 text-sm font-medium text-[#b3b3b3]"
                    for="password">
                    Senha
                </label>
                <input
                    class="flex h-10 border border-input text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 w-full px-2 py-2 bg-[#3e3e3e] border-none rounded-md focus:outline-none focus:ring-2 focus:ring-[#1DB954]"
                    asp-for="Password" id="password" placeholder="Enter your password" type="password" />
                @Html.ValidationMessageFor(u => u.Password)
            </div>
            <button
                class="inline-flex items-center justify-center whitespace-nowrap text-sm ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 h-10 w-full px-4 py-2 font-medium text-white bg-[#1DB954] rounded-md hover:bg-[#1ed760] focus:outline-none focus:ring-2 focus:ring-[#1DB954]"
                type="submit">
                Cadastrar
            </button>
        </form>
        <p>Já possui conta? <a class="text-[#1DB954] hover:text-[#14813A]" asp-area="" asp-controller="Login"
                asp-action="Login">
                Faça login
            </a></p>
        <div class="mt-4 space-y-2 text-sm text-[#b3b3b3]">
            <a class="hover:underline" href="#"></a>
        </div>
    </div>
</div>